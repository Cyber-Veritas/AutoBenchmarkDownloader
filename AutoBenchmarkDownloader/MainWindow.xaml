<Window x:Class="AutoBenchmarkDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoBenchmarkDownloader"
        xmlns:userControls="clr-namespace:AutoBenchmarkDownloader.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="NoResize" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
            <RowDefinition Height="3*" />
            <RowDefinition />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="Resources/Images/app_background.jpg" Stretch="UniformToFill" Opacity="0.95" />
        </Grid.Background>

        <!-- download widget -->
        <Border Grid.Row="1" Grid.RowSpan="2" CornerRadius="10" Background="#303030" Opacity="0.75" Margin="10, 10, 10, 0"/>
        <!-- file path widget -->
        <Border Grid.Row="3" CornerRadius="10" Background="#303030" Opacity="0.75" Margin="10, 10, 10, 10"/>
        <!-- PC usage widget -->
        <Border Grid.Row="1" Grid.Column="2" CornerRadius="10" Background="#303030" Opacity="0.75" Margin="0, 10, 10, 0"/>
        <!-- DXDiag widget -->
        <Border Grid.Row="2" Grid.Column="2" CornerRadius="10" Background="#303030" Opacity="0.75" Margin="0, 10, 10, 0"/>
        <!-- footer -->
        <Border Grid.Row="5" Grid.ColumnSpan="2" Background="#131313" Opacity="0.6"/>


        <userControls:MenuBar Grid.ColumnSpan="2"/>

    </Grid>
</Window>
