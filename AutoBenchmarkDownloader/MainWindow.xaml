<Window x:Class="AutoBenchmarkDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoBenchmarkDownloader"
        xmlns:userControls="clr-namespace:AutoBenchmarkDownloader.View.UserControls"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:viewmodel="clr-namespace:AutoBenchmarkDownloader.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        MouseDown="MainWindow_OnMouseDown"
        Title="MainWindow" ResizeMode="NoResize" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="Border" x:Key="Tile.Background">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Background" Value="#303030" />
            <Setter Property="Opacity" Value="0.75" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="Resources/Images/app_background.jpg" Stretch="UniformToFill" Opacity="0.95" />
        </Grid.Background>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            
            <!-- download widget -->
            <Border Grid.RowSpan="2" Style="{StaticResource Tile.Background}" Margin="10, 10, 10, 0">
                <ItemsControl ItemsSource="{Binding CurrentState.SoftwareInfos}" Margin="20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0, 0, 0, 10">
                                    <ui:ToggleSwitch IsChecked="{Binding Download}" Content="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- file path widget -->
            <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Tile.Background}" Margin="10, 20, 10, 20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Save path:" Foreground="WhiteSmoke" VerticalAlignment="Center"/>
                    <TextBox x:Name="PathTextBox"
                             Text="{Binding CurrentState.OutputPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="356" Height="35"
                             Margin="10"/>
                    <Button Content="{ui:SymbolIcon Folder16}" Width="auto" Height="35" Command="{Binding ChooseOutputPathCommand}" />
                </StackPanel>
            </Border>

            <!-- PC usage widget -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Tile.Background}" Margin="0, 10, 10, 0"/>
            
            <!-- DXDiag widget -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Tile.Background}"  Margin="0, 10, 10, 0"/>

            <Button Grid.Row="2" Grid.Column="1" Content="DOWNLOAD" Margin="0,20,10,20" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" Command="{Binding DownloadCommand}" />

        </Grid>



        <userControls:MenuBar Grid.Row="0" />
        
        <!-- footer -->
        <Border Grid.Row="2" Background="#131313" Opacity="0.6"/>

    </Grid>
</Window>
