<UserControl x:Class="AutoBenchmarkDownloader.View.UserControls.SystemBasicInfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoBenchmarkDownloader.View.UserControls"
             d:DataContext="{d:DesignInstance local:SystemBasicInfoCard}"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="350">
    
    <!-- style -->
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="systemInfo">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Bahnschrift Regular" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="5, 10, 0, 0" />
        </Style>
    </UserControl.Resources>
    
    <!-- view -->
    <Border CornerRadius="8" Background="#505a5a5a">
        <StackPanel>
            
            <TextBlock Text="{Binding GpuInfo, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource systemInfo}"/>
        </StackPanel>

    </Border>
</UserControl>

